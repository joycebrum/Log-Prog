MODULE main
VAR
	state : { a, b, z};
	decryp: { EaMb, EbMa, ma, mb};
	to : { a, b, z };
	encryp : { EaMb, EbMa, ma, mb};
ASSIGN
	init(state) := a;
	init(to) := b;
	init(decryp) := ma;
	init(encryp) := EbMa;
	next(encryp) := case
		encryp = EbMa & state = a & to = b : EbMa;
		encryp = EbMa & state = z & to = b : EaMb;
		encryp = EaMb & state = b & to = z : EaMb;
		TRUE   			    : encryp;
	esac;
	next(state) := case
		state = a : z;
		state = b : z;
		state = z & to = b : b;
		state = z & to = a : a; 
		TRUE 			   : state;
	esac;
	next(to) := case
		state = a & to = b : b;
		state = z & to = b : z;
		state = b & to = z : z;
		TRUE  			  : to;
	esac;
	next(decryp) := case
		encryp = EbMa & state = a & to = b : EbMa;
		encryp = EbMa & state = z & to = b : ma;
		encryp = EaMb & state = b & to = z : EaMb;
		encryp = EaMb & state = z & to = a : mb;
		TRUE 					 : encryp;
	esac; 
	
FAIRNESS
	state = z & decryp != mb;
