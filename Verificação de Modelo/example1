MODULE main
VAR
	state : { a, b, z};
	decryp: { EaM, EbM, EzM, m};
	to : { a, b, z };
	encryp : { EaM, EbM, EzM, m};
ASSIGN
	init(state) := a;
	init(to) := b;
	init(decryp) := m;
	init(encryp) := EbM;
	next(encryp) := case
		decryp = m & to = b : EbM;
		decryp = m & to = z : EzM;
		decryp = m & to = a : EaM; 
		TRUE   			    : encryp;
	esac;
	next(state) := case
		state = a : z;
		state = b : z;
		state = z & to = b : b;
		state = z & to = a : a; 
		TRUE 			   : state;
	esac;
	next(to) := case
		to = b & state = a : b;
		to = b & state = z : z;
		to = z & state = b : z;
		TRUE  			  : to;
	esac;
	next(decryp) := case
		encryp = EaM & state = z & to = a : m;
		encryp = EbM & state = z & to = b : m;
		encryp = EzM & state = a & to = b : m;
		encryp = EzM & state = b & to = a : m;
		encryp = EzM & state = a & to = z : m;
		encryp = EzM & state = b & to = z : m;
		TRUE 					 : encryp;
	esac; 
	
FAIRNESS
	state = z & decryp != m;
